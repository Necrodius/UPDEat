<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnSetLocImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/btnSetLocText"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Location to Current Location"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:clickable="true"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:textColor="@color/maroon"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Allergens"
                    android:layout_weight="1"/>

                <TextView
                    android:textColor="@color/maroon"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Meal Type"
                    android:layout_weight="1"/>

                <TextView
                    android:textColor="@color/maroon"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Budget"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/chkShrimp"
                    android:text="Shrimp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/chkVeg"
                    android:text="Vegetarian"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/chkP"
                    android:text="₱"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/chkMilk"
                    android:text="Milk"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/chkHalal"
                    android:text="Halal"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/chkPP"
                    android:text="₱₱"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/chkNut"
                    android:text="Peanut"
                    android:layout_weight="1"/>

                <TextView
                    android:text=""
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/chkPPP"
                    android:text="₱₱₱"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/chkCheese"
                    android:text="Cheese"
                    android:layout_weight="1"/>

                <TextView
                    android:text=""
                    android:layout_weight="1"/>

                <TextView
                    android:text=""
                    android:layout_weight="1"/>

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnSetPreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Set preferences "
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"
            android:layout_margin="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>