<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Password"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/app_name"
        android:textColor="@color/maroon"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/txtLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSubtitle"
        android:layout_marginStart="18dp"
        android:layout_marginTop="63dp"
        android:text="@string/log_in"
        android:textColor="@color/maroon"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/app_subtitle"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLogIn"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtxtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLogIn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/txtUsername"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtxtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtUsername"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/txtPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtPassword"
        android:layout_marginStart="-118dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/edtxtPassword"
        android:backgroundTint="@color/green"
        android:text="Confirm" />

</RelativeLayout>